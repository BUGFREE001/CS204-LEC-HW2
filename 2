
#1


#include <stdio.h>
#include <string.h>

int main()
{
    printf("Enter a series of numbers: ");
    char str[50]; 
    scanf("%[^\n]%*c", str); 
    
    int MAX_ODD=-999;
    int MIN_EVEN=999;
    
    char * n = strtok (&str," ");
    while (n != NULL)
    {
        int temp = *n-'0'; 
        if(temp%2==0)
        {
            if(temp<MIN_EVEN)
                MIN_EVEN=temp;
        }
        else
        {
            if(temp>MAX_ODD)
                MAX_ODD=temp;
        }
        n = strtok (NULL, " ");
    }
    
    printf("%d",abs(MAX_ODD-MIN_EVEN));
    
    return 0;
}



