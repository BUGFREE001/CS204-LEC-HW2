#2 

#include <stdio.h> 
  
int helper(int a, int b) 
{ 

  if (a == 1) 
    return 1; 
  else
    return (helper(a - 1, b) + b-1) % a + 1; 
} 
  

int main() 
{ 

  int a; 
  int b; 
  
  printf("Enter total number of monkeys in a group: ");
  scanf("%d", &a);
  printf("Enter m value: ");
  scanf("%d", &b);
  
  printf("The king will be %d", helper(a, b)-1); 
  return 0; 
}



