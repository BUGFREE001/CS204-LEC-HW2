#4


#include <stdio.h>

int main ()
{
	int a=1, b=0, c=0, d=0; 
	for (int i=0; i<4; i++)
	{
    if (((a==0 && b==1 && c==0 && d==0)+(a==0 && b==0 && c==0 && d==1)+(c==0)+(d==0))==1){
		  if (a==1)
			  printf ("#1 is the best.\n");
	      else if (b==1)
			  printf ("#2 is the best.\n");
		  else if (c==1)
			  printf ("#3 is the best.\n");
		  else
			  printf ("#4 is the best.\n");
		
		  if ((a==0 && b==1 && c==0 && d==0)==1)
			  printf(" A correct.\n");
		  else if ((a==0 && b==0 && c==0 && d==1)==1)
			  printf(" B correct.\n");
		  else if ((c==0)==1)
			  printf(" C correct.\n");
		  else
			  printf(" D correct.\n");
	    }
    {
      int temp;
	    temp=a;
	    a=b;
    	b=c;
	    c=d;
   	  d=temp;
    }
	}
	return 0;    
}



