#include <stdio.h>

int main ()
{
  int r, c;
  printf("Enter size of row & column: ");
  scanf("%d%d", &r, &c);

  printf("Enter each element: \n");
  int a[r][c];
  for (int i=0; i<r; i++)
  {
      for (int j=0; j<c; j++)
      {
          scanf("%d", &a[i][j]);
      }
  }

  int ctr=0;
  int b=a[0][0]-50;
  for (int i=1; i<r-1; i++)
  {
      for (int j=1; j<c-1; j++)
      {
          if (a[i][j]<=b)
          {
              ctr+=1;
          }
      }
  }

  printf("Result of malignant cell detection: %d", ctr);

  return 0;
}




