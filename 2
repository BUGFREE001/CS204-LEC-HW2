#3 


#include <stdio.h>

int main ()
{
	int a[6]={100, 50, 20, 10, 5, 1}, b[6], n, c=0;
	
	printf ("Enter total payment: ");
	scanf ("%d", &n);
	
  
	for (int i=0; i<6; i++)
	{
    b[i]= n / a[i];
    n = n % a[i];
    c += b[i];
	}
	

  printf ("Result of minimum number of bills: %d\n", c);
  for (int j=0; j<6; j++)
  {
    printf ("$%d bill: %d\n", a[j], b[j]);
  }
  
	return 0;
}



